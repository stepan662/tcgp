grammar = (
  {
    # non-terminals
    PROG, ST_LIST, STAT, IT_LIST, ITEM
  },
  {
    # terminals
    'begin', 'end', ';', 'read', 'write', 'add', ':=', 'int', 'id'
  },
  {
    # rules
    PROG    -> 'begin' ST_LIST 'end';
    PROG    -> ;
    ST_LIST -> STAT ';' ST_LIST;
    ST_LIST -> ;
    STAT    -> 'read' 'id';
    STAT    -> 'write' ITEM;
    STAT    -> 'id' ':=' 'add' ITEM IT_LIST;
    STAT    -> ;
    IT_LIST -> ITEM IT_LIST;
    IT_LIST -> ;
    ITEM    -> 'int';
    ITEM    -> 'id';
  },
  # start symbol
  PROG
)
